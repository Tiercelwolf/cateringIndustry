
.god {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 11998;
    width: 100%;
    animation-iteration-count: 100%;
    background-color: rgba(0,0,0,.0);
    transition: background-color 500ms;
}
.son {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 11999;
    width: 100%;
    height: auto;
    background: #fff;
}
.god.active{
    background-color: rgba(0,0,0,.6);
}

.son.slideup {
    animation: slideup 0.5s linear ;
}

@keyframes slideup {
    from {
        transform: translateY(100%);
    }
    to {
        transform: translateY(0);
    }
}


