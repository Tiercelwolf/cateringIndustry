.nav-1{
  flex: none;  
  display: flex;   
  background: #fff;  
  background-color:#fff;
  height: 150rpx;
}

.nav-1 .wrapBar {
  display: flex;
}

.nav-1 .item{  
  position: relative;   
  text-align: center;  
  font-size: 20rpx;
  line-height: 30rpx;  
  color: black;
  display: inline-block;
  padding-left: 20rpx;
  padding-right: 20rpx;
}  

.nav-1 .item.active{  
  color: white;
}  

.nav-1 .item.active:after{  
  content: "";  
  display: block; 
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0; 
  height: 4rpx;  
  background: white;  
}  

