.option_box{
   position: absolute;
   top: 70rpx;
   width: 100%;
   border:1px solid #efefef;
   box-sizing: border-box;
   height: 0;
   overflow-y: auto;
   border-top: 0;
   background: #ccc;
   transition: height 0.3s;
}

