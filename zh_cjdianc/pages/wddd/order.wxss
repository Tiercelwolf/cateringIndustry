.tab-bar {
  background: #fff;
  border-bottom: 1rpx solid #e3e3e3;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;    
}

.tab-bar~.order-list {
  padding-top: 100rpx;
  padding-bottom: 115rpx;
 
}

.tab-bar image{
  display: block;
  width:65rpx;
  height:70rpx;
  padding-top: 10rpx;
  margin-left: 12rpx;
}

.tab-bar  text {
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
}

.order-list .order-item {
  background: #fff;
  padding: 42rpx 24rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #e3e3e3;
}

.order-list .order-info {
  font-size: 10pt;
  color: #888;
}

.goods-item {
  background: #fff;
  margin: 0rpx 0 0rpx;
}

.goods-item .goods-pic {
  width: 80rpx;
}

.goods-item .goods-name {
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-item .attr-list,.goods-item .num {
  font-size: 9pt;
  color: #888;
}

.goods-item .attr-list .attr-item {
  display: inline-block;
  margin-right: 36rpx;
}

.goods-item .attr-list .attr-item:last-child {
  margin-right: 0;
}

.goods-item .price {
  color: #888;
}


